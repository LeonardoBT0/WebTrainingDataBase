@model WebTrainingDataBase.Models.Profesiones

@{
    ViewBag.Title = "Crear Profesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg p-4">
                <h3 class="text-center text-primary"><i class="bi bi-briefcase-fill"></i> Nueva Profesión</h3>
                <hr />

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <!-- Campo: strValor -->
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.strValor, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre de la Profesión" } })
                            @Html.LabelFor(model => model.strValor)
                            @Html.ValidationMessageFor(model => model.strValor, "", new { @class = "text-danger" })
                        </div>

                        <!-- Campo: strDescripcion -->
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.strDescripcion, new { htmlAttributes = new { @class = "form-control", placeholder = "Descripción" } })
                            @Html.LabelFor(model => model.strDescripcion)
                            @Html.ValidationMessageFor(model => model.strDescripcion, "", new { @class = "text-danger" })
                        </div>

                        <!-- Botón de Guardar -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Guardar
                            </button>
                        </div>
                    </div>
                }

                <!-- Botón de Regresar -->
                <div class="text-center mt-3">
                    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-outline-secondary btn-lg" })
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
