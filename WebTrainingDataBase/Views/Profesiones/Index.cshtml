@model IEnumerable<WebTrainingDataBase.Models.Profesiones>

@{
    ViewBag.Title = "Lista de Profesiones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-primary"><i class="bi bi-briefcase"></i> Lista de Profesiones</h2>
        @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-success btn-lg" })
    </div>

    <div class="table-responsive mt-3">
        <table class="table table-striped table-hover table-bordered shadow-lg">
            <thead class="table-dark">
                <tr>
                    <th class="text-center">@Html.DisplayNameFor(model => model.First().strValor)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.First().strDescripcion)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.strValor)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.strDescripcion)</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info text-white">
                                <i class="bi bi-eye"></i> Detalle
                            </a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
}
